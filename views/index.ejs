<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tic Tac Toe</title>
  <link rel="stylesheet" href="/style.css" type="text/css">
</head>
<body>
  <div class="container">
    <script type="text/javascript" src="helpers.js"></script>
      <div class="game_board">
        <h1>Welcome to Tic-Tac-Toe!</h1>
        <div class="play_area">
          <div id="square_0" class="game_square"></div>
          <div id="square_1" class="game_square"></div>
          <div id="square_2" class="game_square"></div>
          <div id="square_3" class="game_square"></div>
          <div id="square_4" class="game_square"></div>
          <div id="square_5" class="game_square"></div>
          <div id="square_6" class="game_square"></div>
          <div id="square_7" class="game_square"></div>
          <div id="square_8" class="game_square"></div>
        </div>
        <div class="buttons">
          <button onClick="reset_board">New Game!</button>
        </div>
      </div>  
    </div>
</body>
</html>